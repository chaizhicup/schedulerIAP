<p id="notice"><%= notice %></p>

<div style="margin-left:180px">
<h1>Listing Events</h1>

<br>
<%= link_to 'New Event', new_event_path %>
&nbsp&nbsp&nbsp|&nbsp&nbsp&nbsp
<%= link_to 'Back', sessions_url %>
<br><br>

<table border="3px" cellspacing = "0px" bordercolor = "#000000" cellpadding = "4">
  <thead>
    <tr>
      <th>Event Date</th>
      <th>Event Name</th>
      <th>Slot Duration</th>
      <th>Max Students</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_date %></td>
        <td><%= event.name %></td>
        <td><table cellspacing="opx", border="0px">
          <% @event_slots[event.id].each do |slot| %>
          <tr>
            <td> <%= slot.start_time.strftime("%I:%M%p") %>-<%= slot.end_time.strftime("%I:%M%p") %></td>
          </tr>
          <% end %>
        </table></td>
        <td><%= event.max_students %></td>
        <td><%= event.start_time.strftime("%I:%M%p") %></td>
        <td><%= event.end_time.strftime("%I:%M%p") %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>