    <% args = (@new_flag == 1)? [@eves.length] : [1] %>
      <% args[0].times do %>
        <%= f.fields_for :companyevents do |ff| %>
          <%= ff.label :representatives, "#{@eves[@it][1]}" + DateTime.parse("#{@eves[@it][2]}").strftime(" on %A %d-%m-%Y") + DateTime.parse("#{@eves[@it][3]}").strftime(" from %I:%M%p") + DateTime.parse("#{@eves[@it][4]}").strftime(" to %I:%M%p") %><br>
          <%= ff.select :representatives, options_for_select(%w[0 1 2 3 4 5 6], @reps[@it] ), :prompt=>"---Please select---" %><br>
          <% @it = @it + 1 %>
        <% end %>
      <% end %>
  </font>
  </div>

  <br>
  <div class="actions" >
    <input type="submit" name="Submit" value="Submit" style=" width:180px; font-size: 20px; padding: 10px;" />
    </font>
  </div>
<% end %>
