<div>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @company.name %>
  </p>

  <p>
    <strong>Contact person:</strong>
    <%= @company.contact_person %>
  </p>

  <p>
    <strong>Contact email:</strong>
    <%= @company.contact_email %>
  </p>

  <p>
    <strong>Sponsor level:</strong>
    <%= @company.sponsor_level %>
  </p>

  <p>
    <strong>Citizenship:</strong>
    <%= @company.citizenship %>
  </p>

  <p>
    <strong>Job type:</strong>
    <%= @company.job_type %>
  </p>

  <p>
    <strong>Student level:</strong>
    <%= @company.student_level.join(" , ") %>
  </p>
  <% if !(@company.rep_1.blank?) %>
  <p>
    <strong>Representative 1:</strong>
    <%= @company.rep_1 %>
  </p>
  <% end %>

  <% if !(@company.rep_2.blank?) %>
  <p>
    <strong>Representative 2:</strong>
    <%= @company.rep_2 %>
  </p>
  <% end %>

  <% if !(@company.rep_3.blank?) %>
  <p>
    <strong>Representative 3:</strong>
    <%= @company.rep_3 %>
  </p>
  <% end %>

  <% if !(@company.rep_4.blank?) %>
  <p>
    <strong>Representative 4:</strong>
    <%= @company.rep_4 %>
  </p>
  <% end %>

  <% if !(@company.rep_5.blank?) %>
  <p>
    <strong>Representative 5:</strong>
    <%= @company.rep_5 %>
  </p>
  <% end %>

  <% if !(@company.rep_6.blank?) %>
  <p>
    <strong>Representative 6:</strong>
    <%= @company.rep_6 %>
  </p>
  <% end %>
  <% it = 0 %>
  <% @company.events.each do |e| %>
      <p>
        <strong><%= e.name %>: </strong>
        <%= @reps[it] %>
        <% if @reps[it] == 1 %>
          <%= " Representative" %>
        <% else %>
          <%= " Representatives" %>
        <% end %>
      </p>
      <% it = it + 1 %>
  <% end %>

  <%= link_to 'Edit', edit_company_path(@company) %> |
  <%= link_to 'Back', companies_path %>
</div>
