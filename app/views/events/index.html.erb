<p id="notice" style="margin-left:150px"><%= notice %></p>

<div style = "text-align: center">
  <font size="5px" color=maroon><strong><%= "Events List"%></strong></font><br><br>
</div>

<div id="ABC1" align="center">
  <%= link_to 'New Event', new_event_path %>
  &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
  <%= link_to 'Back', sessions_url %>
</div>
<br>

<div style="margin-left:50px; margin-right:50px;">
<table class="table table-hover table-bordered" align="center">  
  <thead>
  <tr>
    <th>Editable for Students</th>
    <th>Event Date</th>
    <th>Event Name</th>
    <th>Timeslots</th>
    <th>Max Students</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th colspan="3">Operation</th>
  </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
      <tr>
        <%if event.editable %>
        <td><%= "âœ“" %></td>
        <%else%>
        <td><%= "X" %></td>
        <%end%>
        <td><%= event.event_date %></td>
        <td><%= event.name %></td>
        <td><table cellspacing="0px", border="0px">
          <% @event_slots[event.id].each do |slot| %>
              <tr>
                <td> <%= slot %></td>
              </tr>
          <% end %>
        </table></td>
        <td><%= event.max_students %></td>
        <td><%= event.start_time.strftime("%I:%M%p") %></td>
        <td><%= event.end_time.strftime("%I:%M%p") %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
<br>

