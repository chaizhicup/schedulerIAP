<%= form_for(@student) do |f| %>



  <div style = "text-align: center">
  <font size="5px" color=maroon><strong><%= "2015 IAP Recruiting Events and Reception/CSE-Only Career Fair"%></strong></font><br><br>
  </div>

  <div style = "text-align: center">
  <font size="5px"><strong><%= "Student Registration"%></strong></font><br><br>
  </div>

  <% if flash[:notice] %>
    <div id="error_explanation">
      <h2><%= pluralize(flash[:notice].count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% flash[:notice].each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div><br><br>
  <font size="4px"><strong><%= "Basic Information"%></strong>
  </div>

  <div>
    <div class="field">•
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    </div>

    <div class="field">•
    <%= f.label :UIN,"UIN" %><br>
    <%= f.text_field :UIN %>

    </div>

  <div class="field">•
    <%= f.label :email %><br>
    <%= f.text_field :email %>

  </div>

  <div class="field">•
    <%= f.label :US_Citizen,"I am a US-Citizen" %><br>
    <%= f.check_box :US_Citizen %>

    </div>

  <div class="field">•
    <%= f.label :degree, "Student level recruiting" %><br>
    <%= f.select :degree, options_for_select(%w[B.S. M.S. PH.D], @student.degree)%>

  </div>

  <div class="field">•
    <%= f.label :position_type, "Job position recruiting" %><br>
    <%= f.select :position_type, options_for_select(%w[Internship Full-time], @student.position_type), :prompt=>"---Please select---" %>
  </div>
  </div>


  <div><br><br>
  <p><font size="4px"><strong><%= "Event and Time Selection" %></strong></font></p>
  </div>
 
  <div class="field">•
    <%= f.label :Mock_1,"Mock Interviews 1. Monday 1:00 - 3:00 p.m." %><br>
    <%= f.select :Mock_1, options_for_select(@mock_1_slots, @student.Mock_1), :prompt=>"---Please select time for Mock Interview 1 ---" %>
  </div>

  <div class="field">•
    <%= f.label :Resume_1,"Resume Clinic 1. Monday 9:30 - 11:30 a.m." %><br>
    <%= f.select :Resume_1, options_for_select(@resume_1_slots, @student.Resume_1), :prompt=>"---Please select time for Resume Clinic 1 ---"%>
  </div>

  <div class="field">•
    <%= f.label :Resume_2, "Resume Clinic 2. Monday 3:00 - 5:00 p.m." %><br>
    <%= f.select :Resume_2, options_for_select(@resume_2_slots, @student.Resume_2), :prompt=>"---Please select time for Resume Clinic 2 ---"%>
  </div>

  <div class="field">•
    <%= f.label :Mock_2, "Mock Interviews 2. Tuesday 1:00 - 3:00 p.m." %><br>
    <%= f.select :Mock_2, options_for_select(@mock_2_slots, @student.Mock_2), :prompt=>"---Please select time for Mock Interview 2 ---" %>
  </div>

  <div class="field">•
    <%= f.label :Resume_3, "Resume Clinic 3. Tuesday 9:30 - 11:30 a.m." %><br>
    <%= f.select :Resume_3, options_for_select(@resume_3_slots, @student.Resume_3), :prompt=>"---Please select time for Resume Clinic 3 ---" %>
  </div>
  
  <br>
  <div class="field">•
    <%= "Select if you will be attending the Lunch with "%>
    <strong><%= "Student Organization Leaders"%></strong><br>
    <%= " and " %>
    <strong><%= " Company Representatives"%></strong>
    <%= " from 11:45am - 12:45pm, "%>
    <strong><%="Monday"%></strong><br>
    <%= f.label :Lunch, "Please select:"%><br>
    <%= f.select :Lunch, options_for_select(['Attend', 'Not Attend'], @student.Lunch), :prompt=>"---Please select---" %>
  </font><br><br><br>
  </div>

  <div class="actions" >
    <input type="submit" name="Submit" value="Register" style=" width:180px; font-size: 20px; padding: 10px;" />
    </font>
  </div>
  
  </body>

<% end %>
