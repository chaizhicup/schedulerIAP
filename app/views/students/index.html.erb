</div>
<br>
 
  <!--
  <p><strong>Students registered for lunch:
  <%= @lunch_total%></strong>
  </p>
  -->
</div>

<table align="center" border="3px" cellspacing = "0px" bordercolor = "#000000" cellpadding = "4">
    <thead>
      <tr>
        <th>Name</th>
        <th>UIN</th>
        <th>Email</th>
        <th>US.C</th>
        <th>Degree</th>
        <th>P.T.</th>
        <th>M.1.</th>
        <th>M.2.</th>
        <th>R.1.</th>
        <th>R.2.</th>
        <th>R.3.</th>
        <!--
        <th>Lunch</th>
        -->
        <th colspan="3">Operation</th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.UIN %></td>
          <td><%= student.email %></td>
          <td><%= student.US_Citizen %></td>
          <td><%= student.degree %></td>
          <td><%= student.position_type %></td>
          <td><%= student.Mock_1 %></td>
          <td><%= student.Mock_2 %></td>
          <td><%= student.Resume_1 %></td>
          <td><%= student.Resume_2 %></td>
          <td><%= student.Resume_3 %></td>
          <!--
          <td><%= student.Lunch %></td>
          -->
          <td><%= link_to 'Show', student %></td>
          <td><%= link_to 'Edit', edit_student_path(student) %></td>
          <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<br>

