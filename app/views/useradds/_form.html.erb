
    <%= form_for(@useradd) do |f| %>
      <%= render 'shared/error_messages' %>
   <br>
   <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
   </div>   

   <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email%>
   </div >  

    <div class="field">   
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>

    <div class = "field">
      <%= f.label :password_confirmation, "Confirmation" %><br>
      <%= f.password_field :password_confirmation %>
    </div>  
    <br>

    <div class ="action">
      <%= f.submit "Create my account", class: "button" %>
    </div>
    <% end %>
